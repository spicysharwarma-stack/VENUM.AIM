local CrownFunctions = {
    ["Fling"] = {
        {"🌀 Orbit Nearest", function()
            OrbitalActive = not OrbitalActive
            if OrbitalActive then
                OrbitalFling()
            end
        end},
        
        {"🔒 Enable Collision", function()
            EnableCollision()
        end},
        
        {"🛑 Stop Fling", function()
            OrbitalActive = false
        end}
    },
    
